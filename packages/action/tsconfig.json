{
  "compilerOptions": {
    "strict": true,
    "pretty": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ESNext",
    "rootDir": "src",
    "outDir": "build"
  },
  "include": ["src/**/*.ts"]
}
